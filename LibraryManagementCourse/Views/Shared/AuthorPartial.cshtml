@model Author

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @Model.Name
        </div>
        <div class="panel-body">
            <h2>Book Count : @Model.Books?.Count</h2>
        </div>
        <div class="btn-group">
            @if (@Model.Books?.Count == 0)
    {
        <a class="btn btn-default" asp-area="">View Book List</a>
}
else
{
        <a class="btn btn-info" asp-controller="Book" asp-action="List" asp-route-authorId="@Model.AuthorId">View Book List</a>
}
            <a class="btn btn-info" asp-controller="Author" asp-action="Update" asp-route-id="@Model.AuthorId">Update</a>
            <a class="btn btn-danger" asp-controller="Author" asp-action="Delete"  asp-route-id="@Model.AuthorId">Delete</a>
        </div>
    </div>
</div>